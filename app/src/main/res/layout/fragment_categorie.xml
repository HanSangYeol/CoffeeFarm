                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="자료" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/soft_gray"/>
                    <LinearLayout
