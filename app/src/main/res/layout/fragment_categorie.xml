                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout="@layout/fragment_setproduct"/>
                </LinearLayout>
                <LinearLayout
                    android:tag="5"
                    android:id="@+id/presentFragLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
