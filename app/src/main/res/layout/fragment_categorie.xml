                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="경기도 하남시 조정대로 150 ITECO 오렌지존 8F 860호"
                                android:textSize="12sp"/>
