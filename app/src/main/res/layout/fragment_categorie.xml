                </LinearLayout>
                <LinearLayout
                    android:tag="1"
                    android:id="@+id/greenbeanFragLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <fragment
                        android:id="@+id/greenbeanFragment"
                        class="com.coffee_farm.www.coffeefarm.Fragment.Home.GreenBeanFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout="@layout/fragment_greenbean"/>
                </LinearLayout>
                <LinearLayout
                    android:tag="2"
                    android:id="@+id/beanFragLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
